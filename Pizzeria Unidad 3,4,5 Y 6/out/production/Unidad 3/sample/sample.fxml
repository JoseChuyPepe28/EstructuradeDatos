<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" styleClass="fondo" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.261" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Label rotate="5.0" text="Pizzeria Perrona" textFill="RED">
         <font>
            <Font name="Britannic Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets top="80.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtUsuario" maxWidth="250.0" prefHeight="30.0" promptText="Usuario" styleClass="cabecera">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin></TextField>
      <PasswordField fx:id="txtContraseña" maxWidth="250.0" onKeyReleased="#enter" prefHeight="30.0" promptText="Contraseña" styleClass="cabecera" />
      <Button maxHeight="30.0" maxWidth="150.0" mnemonicParsing="false" onAction="#login" styleClass="buttoninsertar" text="Ingresar" textFill="#403e3e" />
   </children>
   <padding>
      <Insets top="30.0" />
   </padding>
</VBox>
